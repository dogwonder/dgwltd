/*
* Basic styles for form functionality and layout.
*
* Used in the theme.css front-end stylesheet.
*/

@import '../shared/_label-position.pcss';
@import '../shared/_complex-fields.pcss';
@import '../shared/_grid.pcss';
@import '../shared/_rtl.pcss';

/**
 * Validation
 */

.gform_wrapper .gform_validation_errors {
	background: #FFFFFF;
	border-radius: 5px;
	border: 1.5px solid #C02B0A;
	box-shadow: 0px 1px 4px rgba(0, 0, 0, 0.11), 0px 0px 4px rgba(18, 25, 97, 0.0405344);
	margin-bottom: 0.5rem;
	margin-top: 0.5rem;
	padding: 1.0625rem 1.375rem;
	width: 100%;

	& > h2 {
		font-size: 0.825rem;
		font-weight: 400;
		line-height: 1.1rem;
		color: #C02B0A;
		margin: 0 0 0.9375rem 0;

		&:before {
			display: none;
		}

		.gform-icon {
			font-size: 1rem;
			padding-right: .5rem;
			position: relative;
			top: 1px;
		}
	}

	& > h2.hide_summary {
		margin: 0 ;
	}

	& > ol {
		list-style-type: none !important;
		padding-block-start: 0;
		padding-inline-start: 0;
		margin-block-start: 0;
		margin: 0;

		a {
			text-decoration: none;
			color: #C02B0A;
			font-size: 1rem;
		}

		li {
			margin: 0 0 0.9375rem 0;
			font-size: 1rem;
			list-style-type: none !important;

			&:last-of-type {
				margin-bottom: 0;
			}
		}
	}
}

.gform_wrapper .gfield_required {
	color: #C02B0A;
	display: inline-block;
	padding-left: .125em;
	font-size: 0.813rem;

	.gfield_required_text,
	.gfield_required_custom {
		font-weight: 400;
		font-style: italic;
	}
}

.gform_wrapper .gform_required_legend .gfield_required {
	padding-left: 0;
}

.gform_wrapper .validation_error {
	padding: 1rem;
	margin-bottom: 2rem;
	color: #C02B0A;
	font-size: 1em;
	font-weight: 700;
	border-top: 2px solid #C02B0A;
	border-bottom: 2px solid #C02B0A;
	text-align: center;
}

.gform_wrapper {
	.gfield_error label,
	.gfield_error legend,
	.gfield_error .gfield_repeater_cell label,
	.gfield_error .ginput_complex label,
	.gfield_validation_message,
	.validation_message {
		color: #C02B0A;
	}
}

.gform_wrapper .gfield_validation_message,
.gform_wrapper .validation_message {
	background: #FFF9F9;
	border: 1px solid #c02b0a;
	font-size: 0.937rem;
	margin-top: .5rem;
	padding: 0.812rem 1.5rem;
}

.gform_wrapper fieldset.field_sublabel_below .gfield_validation_message,
.gform_wrapper fieldset.field_sublabel_below .validation_message {
	margin-top: 0;
}

.gform_wrapper .gfield_error {
	input[type="text"],
	input[type="password"],
	input[type="email"],
	input[type="url"],
	input[type="date"],
	input[type="month"],
	input[type="time"],
	input[type="datetime"],
	input[type="datetime-local"],
	input[type="week"],
	input[type="number"],
	input[type="search"],
	input[type="tel"],
	input[type="color"],
	textarea,
	select,
	.chosen-container-multi {
		border: 1px solid #C02B0A !important;
	}
}


/**
 * Pages: Progress Bar
 */

.gform_wrapper {
	.gf_progressbar_title {
		font-size: 13px;
		font-weight: normal;
		color: #767676;
		margin: 0 0 0.3rem 0;
	}

	.gf_progressbar {
		position: relative;
		border-radius: 10.5px;
		background: #e8e8e8;
		margin-bottom: 1rem;
	}

	.gf_progressbar_percentage {
		height: 21px;
		text-align: right;
		border-radius: 10.5px;
		vertical-align: middle;
	}

	.gf_progressbar_percentage:not(.percentbar_100) {
		border-radius: 10.5px 0 0 10.5px;
	}

	.gf_progressbar_percentage span {
		display: block;
		width: auto;
		float: right;
		margin-right: 0.5rem;
		margin-left: 0.5rem;
		line-height: 21px;
		font-size: 13px;
		min-width: 2em;
	}

	.gf_progressbar_percentage.percentbar_0 span {
		color: #959595;
		text-shadow: none;
		float: none;
		margin-left: 0.6rem;
	}

	.gf_progressbar_blue {
		background: #D2D6DC;
	}

	.gf_progressbar_percentage.percentbar_blue {
		background-color: #1E7AC4;
		color: #FFF;
	}

	.gf_progressbar_gray {
		background: #D2D6DC;
	}

	.gf_progressbar_percentage.percentbar_gray {
		background-color: #6B7280;
		color: #FFF;
	}

	.gf_progressbar_green {
		background: #E8E8E8;
	}

	.gf_progressbar_percentage.percentbar_green {
		background-color: #AAC138;
		color: #FFF;
	}

	.gf_progressbar_orange {
		background: #E8EAEC;
	}

	.gf_progressbar_percentage.percentbar_orange {
		background-color: #FF5D38;
		color: #FFF;
	}

	.gf_progressbar_red {
		background: #E8EAEC;
	}

	.gf_progressbar_percentage.percentbar_red {
		background-color: #EC1E31;
		color: #FFF;
	}

	.gf_progressbar_spring {
		background: #D2D6DC;
	}

	.gf_progressbar_percentage.percentbar_spring {
		background: linear-gradient(270deg, #9CD790 0%, #76D7DB 100%);
		color: #FFF;
	}

	.gf_progressbar_blues {
		background: #D2D6DC;
	}

	.gf_progressbar_percentage.percentbar_blues {
		background: linear-gradient(270deg, #00C2FF 0%, #7838E2 100%);
		color: #FFF;
	}

	.gf_progressbar_rainbow {
		background: #D2D6DC;
	}

	.gf_progressbar_percentage.percentbar_rainbow {
		background: linear-gradient(270deg, #1DBEEA 0%, #CD6AD6 50%, #F35160 100%);
		color: #FFF;
	}
}


/**
 * Pages: Steps
 */
.gform_wrapper {
	.gf_page_steps {
		border-bottom: 1px dotted #ccc;
	}

	.gf_step {
		margin: 0.5rem 2rem 0.5rem 0;
		opacity: 0.2;
		display: inline-block;
	}

	.gf_step_number {
		font-size: 1.25em;
		margin-right: 0.5rem;
	}

	.gf_step_number,
	.gf_step_label {
		display: inline-block;
		vertical-align: middle;
	}

	.gf_step_active {
		opacity: 1.0;
	}

	.gf_step_hidden {
		display: none;
	}
}

/**
 * Credit Card Warning and Error Messages
 */
.gform_wrapper {
	.gfield_creditcard_warning {
		padding: 1rem;
		border-top: 2px solid #C02B0A;
		border-bottom: 4px solid #C02B0A;
		background-color: rgba(255, 223, 224, 0.25);

		.gfield_creditcard_warning_message {
			font-size: 1rem;
			font-weight: 700;
			font-family: inherit;
			min-height: 2rem;
			color: #C02B0A;
			position: relative;

			span {
				text-transform: uppercase;
				background-image: url(data:image/svg+xml;base64,);;
				display: block;
				padding: 0 0 1rem 1.5rem;
				margin-bottom: 1rem;
				letter-spacing: 0.1pt;
				border-bottom: 1px solid #C02B0A;
				background-size: 1.5rem 1rem;
				background-repeat: no-repeat;
				background-position: 0 0.2rem;
			}
		}
	}
}

/**
 * List Field
 */
.gform_wrapper {
	.gfield_list_header,
	.gfield_list_group {
		display: flex;
		flex-direction: row;
		flex-wrap: nowrap;
		margin-bottom: 0.5rem;
	}

	.gfield_list_group:last-child {
		margin-bottom: 0;
	}

	.gfield_header_item:last-child,
	.gfield_list_icons {
		width: 48px;
		flex: none;
		display: flex;
		align-items: center;
		justify-content: center;
	}

	.gfield_list_icons button {
		font-size: 0;
		background: transparent url('../images/list-add.svg');
		border: none;
		width: 16px;
		height: 16px;
		opacity: 0.5;
		padding: 0;
		transition: opacity .5s ease-out;
	}

	.gfield_list_icons button:hover,
	.gfield_list_icons button:focus {
		opacity: 1.0;
		outline: none;
	}

	.gfield_list_icons button.delete_list_item {
		margin-left: 5px;
		background-image: url('../images/list-remove.svg');
	}
	.gfield_header_item {
		word-break: break-word;
	}

	.gfield_header_item,
	.gfield_list_group_item {
		flex-grow: 1;
		width: 0;
	}

	.gfield_header_item + .gfield_header_item:not(:last-child),
	.gfield_list_group_item + .gfield_list_group_item {
		margin-left: 1rem;
	}

	.gfield_list_group_item input,
	.gfield_list_group_item select {
		width: 100%;
	}

	@media (max-width: 640px) {

		.gfield_list_header {
			display: none;
		}

		.gfield_list_group {
			display: block;
			border: 1px solid rgba(0, 0, 0, 0.2);
			padding: 1rem;
			margin-bottom: 1rem;
		}

		.gfield_list_group:last-child {
			margin-bottom: 0;
		}

		.gfield_list_group_item:not(:last-child) {
			margin-bottom: 0.5rem;
		}

		.gfield_list_group_item:after {
			content: attr(data-label);
		}

		.gfield_list_icons {
			width: auto;
			background-color: rgba(0, 0, 0, 0.1);
			margin: 1rem -1rem -1rem;
			padding: 0.75rem 1rem;
			line-height: 0;
			text-align: left;
		}

		.gfield_header_item + .gfield_header_item:not(:last-child),
		.gfield_list_group_item + .gfield_list_group_item {
			margin-left: 0;
		}

	}
}

/*
 * TinyMCE Character Count
 */

.gform_wrapper {
	.ginput_counter {
		color: #767676;
		font-size: 0.8em;
	}

	.ginput_counter_tinymce {
		border-top: 1px solid #eee;
		padding: 2px 10px;
		font-size: 12px;
	}
}

/**
 * Date Picker
 */
.gform_wrapper {
	.ginput_container_date + .ginput_container_date {
		margin-left: 1rem;
	}

	.ginput_container_date[style*='display:none'] + .ginput_container_date {
		margin-left: 0;
	}

	.ginput_container_date label,
	.gfield_date_format {
		display: block;
	}
}

/**
 * Time Fields
 */

.gform_wrapper {
	.gfield_time_hour label.hour_label,
	.gfield_time_minute label.minute_label {
		display: block;
		font-size: 0.8125rem;
		margin: 0;
		padding-top: 0.3125rem;
	}

	.ginput_container_time input {
		width: 5.3125rem;
	}

	.ginput_container_time + .ginput_container_time {
		margin-left: 1rem;
	}

	.gfield_time_minute {
		position: relative;
	}

	.hour_minute_colon {
		padding: 0 0.5rem;
		display: flex;
		align-items: flex-end;
	}

	.gfield_time_ampm {
		display: flex;
		align-items: flex-end;
	}

	.hour_minute_colon.below,
	.gfield_time_ampm.below {
		align-items: flex-start;
	}

}

	/**
	 * Credit Card Field
	 */

.gform_wrapper {
	.ginput_cardextras {
		display: flex;
		flex-wrap: wrap;
	}

	.ginput_complex .ginput_cardinfo_right input {
		width: 30%;
		max-width: 7rem;
	}

	.ginput_card_expiration_container {
		display: flex;
		flex-wrap: wrap;
	}

	.ginput_card_expiration_month {
		flex: 1;
		margin-right: 1rem;
	}

	.ginput_card_expiration_year {
		flex: 1;
	}

	.ginput_cardinfo_right label,
	.ginput_cardinfo_right legend,
	.ginput_cardinfo_left label,
	.ginput_cardinfo_left legend {
		flex: 1 1 100%;
	}
}

html[dir="rtl"] .gform_wrapper {
	.ginput_card_expiration_month {
		margin-left: 1rem;
		margin-right: 0;
	}

	.gform_card_icon {
		float: right;
	}

	.gfield_creditcard_warning .gfield_creditcard_warning_message span {
		display: block;
		padding: 0 1.5rem 1rem 0;
		margin-bottom: 1rem;
		background-size: 1.5rem 1rem;
		background-repeat: no-repeat;
		background-position: right 0.2rem;
	}
}

@media (max-width: 640px) {

	.gform_wrapper .ginput_card_expiration {
		flex: none;
	}

	.gform_wrapper .ginput_card_expiration_month {
		margin-bottom: 0.5rem;
	}

}

/**
 * Pricing Fields
 */
.gform_wrapper {
	.ginput_product_price_wrapper {
		display: inline-block;
	}

	.ginput_product_price,
	.ginput_shipping_price {
		color: #900;
	}

	.ginput_total {
		color: #060;
	}
}

	/**
	 * Repeater
	 */

.gform_wrapper {
	.gfield_repeater_cell {
		margin-top: 0.5rem;
	}

	.gfield_repeater_cell label {
		color: rgb(155, 154, 154);
		font-weight: 400;
		font-size: 0.8rem;
		padding-top: 0.5rem;
	}

	.gfield_repeater_items .gfield_repeater_cell:not(:first-child) {
		padding-top: 0.5rem;
	}

	.gfield_repeater_wrapper input {
		border: 1px solid rgba(197, 198, 197, 1.000);
		border-radius: 4px;
	}

	.gfield_repeater_cell > .gfield_repeater_wrapper {
		border-left: 8px solid rgba(241, 241, 241, 1.000);
		box-shadow: 0 1px 1px 0 rgba(0, 0, 0, 0.06), 0 2px 1px -1px rgba(0, 0, 0, 0.06), 0 1px 5px 0 rgba(0, 0, 0, 0.06);
		background-color: rgba(1, 1, 1, 0.02);
		padding: 10px 20px;
		border-radius: 8px;
		border-bottom: 1px solid rgba(238, 238, 238, 1.000);
	}

	.gfield_repeater_buttons {
		padding-top: 1rem;
	}

	.gfield_repeater_buttons .add_repeater_item_plus:hover, .gfield_repeater_buttons .remove_repeater_item_minus:hover,
	.gfield_repeater_buttons .add_repeater_item_text:hover, .gfield_repeater_buttons .remove_repeater_item_text:hover {
		background: rgba(250, 250, 250, 1.000);
		color: #374750;
		border: 1px solid rgba(117, 117, 117, 1);
	}

	.gfield_repeater_buttons .add_repeater_item_plus:focus, .gfield_repeater_buttons .remove_repeater_item_minus:focus,
	.gfield_repeater_buttons .add_repeater_item_text:focus, .gfield_repeater_buttons .remove_repeater_item_text:focus {
		outline: 0;
	}

	.gfield_repeater_buttons .add_repeater_item_text, .gfield_repeater_buttons .remove_repeater_item_text {
		min-width: 6.25rem;
		height: 2rem;
		background: rgba(242, 242, 242, 0.5);
		transition: all .3s cubic-bezier(0.67, 0.17, 0.40, 0.83);
		font-size: 0.75rem;
		color: rgba(117, 117, 117, 1);
		border-radius: 1.25rem;
		margin-right: 0.5rem;
		margin-bottom: 0.5rem;
		border: 1px solid rgba(117, 117, 117, 0.4);
		font-weight: 400;
	}

	.gfield_repeater_buttons .add_repeater_item_plus, .gfield_repeater_buttons .remove_repeater_item_minus {
		width: 1.5rem;
		height: 1.5rem;
		background: rgba(242, 242, 242, 0.5);
		transition: all .3s cubic-bezier(0.67, 0.17, 0.40, 0.83);
		font-size: 1rem;
		color: rgba(117, 117, 117, 1);
		border-radius: 50%;
		margin: 10px 5px 0px 5px;
		border: 1px solid rgba(117, 117, 117, 0.4);
		font-weight: 700;
		padding: 0;
	}

	.gfield_repeater .gfield_repeater_items .gfield_repeater_item:not(:last-child) {
		border-bottom: 2px solid #e0e0e6;
		padding-bottom: 1.25rem;
		margin-bottom: 1.25rem;
		margin-right: 0.5rem;
	}
}
	/**
	 * Consent Field
	 */
.gform_wrapper {
	.gfield_consent_description {
		max-height: 15rem;
		overflow-y: scroll;
		border: 1px solid #ddd;
		margin-top: 0.5rem;
		padding: 0.5rem;
		font-size: 0.8em;
	}
}
