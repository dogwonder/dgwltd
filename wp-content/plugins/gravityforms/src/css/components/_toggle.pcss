.gform-field__toggle,
.gform-settings-field__toggle {
	transition-duration: .2s;
	transition-timing-function: cubic-bezier(.4, 0, .2, 1);

	.gform-settings-description {
		margin-bottom: .625rem;
	}

	input[type="checkbox"] {

		&:focus {

			+ .gform-field__toggle-container {
				border-color: var(--c-gravity-blue);
			}

		}

		&:disabled {
			display: none;

			+ .gform-field__toggle-container {
				cursor: not-allowed;
				opacity: .4;
				pointer-events: none;
			}
		}

		&:checked {

			+ .gform-field__toggle-container {
				background: var(--c-gravity-blue);

				.gform-field__toggle-switch {
					background-image: url('data:image/svg+xml;base64,');
					background-size: .5rem;
					left: 1.5rem;
				}
			}

			&:focus {

				+ .gform-field__toggle-container {
					border: 2px solid var(--c-spindle);
				}

			}
		}

		&:not( :disabled ) {
			opacity: 0 !important;
			position: absolute;
			z-index: 3;
		}
	}

	.gform-field__toggle-switch {
		background: var(--c-white) center no-repeat url('data:image/svg+xml;base64,');
		background-size: .625rem;
		border-radius: 50%;
		box-shadow: 0 1px 4px rgba(24, 24, 72, 0.123698);
		display: block;
		height: 1.125rem;
		left: 0;
		position: relative;
		transition: all .25s ease;
		transition-duration: .2s;
		transition-property: background, left;
		transition-timing-function: cubic-bezier(.4, 0, .2, 1);
		width: 1.125rem;
	}
}

.gform-field__toggle-container {
	background: var(--c-border);
	border: 2px solid transparent;
	border-radius: 15px;
	box-shadow: inset 0 1px 2px rgba(90, 97, 105, 0.15);
	cursor: pointer;
	display: inline-block;
	height: 1.125rem;
	margin-right: .5rem;
	padding: .1275rem;
	position: relative;
	transition: all .25s ease;
	transition-duration: .2s;
	transition-property: background-color, border-color, color, fill, stroke;
	transition-timing-function: cubic-bezier(.4, 0, .1, 1);
	width: 2.625rem;
}

.gforms_edit_form {

	.gform-field__toggle-container {
		bottom: -0.1rem;
		margin-bottom: 0;
		margin-right: 0.1rem;
	}
}
