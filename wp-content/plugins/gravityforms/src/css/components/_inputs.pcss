/* -----------------------------------------------------------------------------
 *
 * Components: Inputs
 *
 * ----------------------------------------------------------------------------- */

/** Override disabled styles */

.gforms_edit_form #form_editor_fields_container {

	input:disabled,
	input.disabled,
	select:disabled,
	select.disabled,
	textarea:disabled,
	textarea.disabled,
	.wp-core-ui select.disabled,
	.wp-core-ui select:disabled,
	input:disabled,
	input.disabled,
	select:disabled,
	select.disabled,
	textarea:disabled,
	textarea.disabled,
	.wp-core-ui select.disabled,
	.wp-core-ui select:disabled,
	input[type="checkbox"]:disabled,
	input[type="checkbox"].disabled,
	input[type="radio"]:disabled,
	input[type="radio"].disabled {
		border-color: var( --c-border );
		background-color: var( --c-white );
		opacity: 1;
	}

	.gform_hidden input {
		border-color: var( --c-snuff );
	}
}


.panel-block-tabs__body--settings {

	input[type="text"], input[type="password"], input[type="date"], input[type="datetime"], input[type="datetime-local"], input[type="email"], input[type="month"], input[type="number"], input[type="search"], input[type="tel"], input[type="time"], input[type="url"], input[type="week"] {
		padding: 0rem 0.75rem;
	}

	input,
	textarea {
		background: var(--c-white);
		border: 1px solid var( --c-border );
		border-radius: 3px;
		box-sizing: border-box;
		color: var( --c-text );
		transition: box-shadow .15s ease;

		&:focus {
			border: 1px solid var(--c-primary-light);
			box-shadow: 0px 0.125rem 0.0675rem rgba(28, 31, 63, 0.0634624),
			0px 0px 0px 2px var(--c-focus);
		}

	}

	textarea {
		padding: 0.5rem 0.75rem;
		height: 5.3125rem;
		width: 100%;
	}

	input[type="text"] {

		max-height: 2.25rem;
		min-height: 2.25rem;
		width: 100%;

		&::placeholder {
			color: var(--c-amethyst-smoke);
		}

		&.small, select.small {
			width: 25%;
		}

		&.medium,
		select.medium {
			width: 50%;
		}

		&.large,
		select.large,
		textarea.textarea {
			width: 100%;
		}
	}

	.right_label input[type="text"].small,
	.right_label select.small,
	.left_label input[type="text"].small,
	.left_label select.small {
		width: 15%;
	}

	.right_label input[type="text"].medium,
	.right_label select.medium,
	.left_label input[type="text"].medium,
	.left_label select.medium {
		width: 35%;
	}

	.right_label input[type="text"].large,
	.right_label select.large,
	.left_label input[type="text"].large,
	.left_label select.large,
	textarea.textarea {
		width: 67%;
	}

	select {
		background: url(data:image/svg+xml;charset=US-ASCII,%3Csvg%20width%3D%2220%22%20height%3D%2220%22%20xmlns%3D%22http%3A%2F%2Fwww.w3.org%2F2000%2Fsvg%22%3E%3Cpath%20d%3D%22M5%206l5%205%205-5%202%201-7%207-7-7%202-1z%22%20fill%3D%22%239092B2%22%2F%3E%3C%2Fsvg%3E)  no-repeat right 0.6rem top 55%;
		background-color: var( --c-white );
		background-size: 16px 16px;
		border: 1px solid var( --c-border );
		border-radius: 3px;
		box-shadow: none;
		box-sizing: border-box;
		color: var( --c-text );
		font-size: 0.8125rem;
		line-height: 1.6875rem;
		max-height: 2.25rem;
		min-height: 2.25rem;
		padding: 0 2rem 0 0.8125rem;
		width: 100%;

		.gf_browser_gecko & {
			line-height: 2rem;
		}

		&:hover {
			box-shadow: 0px 0.25rem 0.25rem rgba(18, 25, 97, 0.0405344);
			color: var(--c-text);
		}

		&:focus {
			border: 1px solid var(--c-primary-light);
			box-shadow: 0px 0.125rem .0625rem rgba(28, 31, 63, 0.0634624),
						0px 0px 0px 2px var(--c-focus);
			color: var(--c-text);
		}
	}

	input[type="radio"],
	input[type="checkbox"] {
		border: 0 none;
		clip: rect(0.125rem, 0.125rem, 0.125rem, 0.125rem);
		clip-path: inset(50%);
		height: .0625rem;
		margin: -0.125rem;
		overflow: hidden;
		padding: 0;
		position: absolute;
		webkit-clip-path: inset(50%);
		width: .0625rem;
	}

	.field-choice-label {
		height: 1rem;
		margin: 0 0.325rem;
		position: relative;
		width: 1rem;
	}

	input[type="radio"] {

		+ label {
			outline: none;
			margin-right: 0.3rem;
		}

		&:focus {

			+ label {

				&:before {
					box-shadow: var(--bs-focus);
				}
			}
		}

		&:disabled + label:before{
			opacity: .6;
		}

		&:not(.field-choice-type) {

			+ label {

				&:before {
					background-color: var(--c-white);
					border-radius: 50%;
					border: 1px solid var( --c-amethyst-smoke );
					content: '';
					display: inline-block;
					height: 1.25rem;
					top: 1.5625rem;
					transition: var(--tr-inputs);
					margin-right: 0.3rem;
					vertical-align: middle;
					width: 1.25rem;
				}

				&:hover {

					&:before {
						background-image: var(--im-input-grey-bullet);
						background-position: center;
						background-repeat: no-repeat;
						border-color: var( --c-primary-light );
						box-shadow: var(--bs-focus);
						display: inline-block;
					}
				}

				&::selection {
					background: transparent;
				}

			}

			&:checked {

				&:focus {

					+ label {

						&:before {
							box-shadow: var(--bs-focus);
						}
					}
				}

				+ label {

					&:before {
						background-color: var(--c-white);
						background-image: var(--im-input-bullet);
						background-position: center;
						background-repeat: no-repeat;
						border-color: var(--c-amethyst-smoke);
					}

				}
			}

		}

	}

	.field-choice-label::before {
		background: url('../images/icon-check-inactive.svg') center center no-repeat;
		border: 0 none;
		bottom: auto;
		box-shadow: none;
		content: '';
		cursor: pointer;
		display: inline-block;
		height: 1rem;
		position: absolute;
		top: auto;
		vertical-align: auto;
		width: 1rem;
	}

	.field-choice-type:checked + .field-choice-label::before {
		background: url('../images/icon-check-active.svg') center center no-repeat;
	}

	input[type="checkbox"]:not(.gform-field__toggle-input) {

		+ label {
			outline: none;
		}

		&:disabled + label::before {
			opacity: .6;
		}

		&:not(.field-choice-type) {

			&:focus {

				+ label {

					&:before {
						border: 1px solid var(--c-primary-light);
						box-shadow: var(--bs-focus);
					}
				}
			}

			/* container for styled checkbox + label */

			+ label {

				/* styled checkbox */

				&:before {
					background-color: var(--c-white);
					border-radius: 3px;
					border: 1px solid var(--c-amethyst-smoke);
					content: "";
					display: inline-block;
					height: 1.375rem;
					margin-right: 0.375rem;
					transition: var(--tr-inputs);
					vertical-align: middle;
					width: 1.375rem;
				}

				&:hover {

					&:before {
						background-image: var(--im-input-grey-check);
						background-position: center;
						background-repeat: no-repeat;
						border-color: var(--c-primary-light);
						box-shadow: var(--bs-focus);
					}
				}

				&::selection {
					background: transparent;
				}

			}

		}

		&:checked {

			+ label {

				&:before {
					background-color: var(--c-button);
					background-image: var(--im-input-check);
					background-position: center;
					background-repeat: no-repeat;
					border-color: var(--c-gravity-blue);
				}

			}

		}

	}

	.choice_with_value .field-choice-text,
	#field_choices .field-choice-text {
		flex: 1 0 auto;
		max-width: 14.75rem;
		width: 80%;
	}

	input:disabled, textarea:disabled, select:disabled {
		pointer-events: none;
		background-color: var(--c-white-lilac);
		border: 1px solid var(--c-white-lilac);
		color: var(--c-amethyst-smoke);
	}
}

html[dir="rtl"] {

	.panel-block-tabs__body--settings {

		input[type="radio"]:not(.field-choice-type) + label::before {
			margin-left: 0.3rem;
			margin-right: initial;
		}

		input[type="radio"] + label {
			margin-right: 0;
		}

	}

}

textarea:focus,
input:focus,
select:focus {
	border: 2px solid var( --c-focus );
	box-shadow: 0rem 0.125rem .0625rem rgba(28, 31, 63, 0.0634624);
}

/** Override WP core styles */
.gfield input[type="checkbox"],
.gfield input[type="radio"] {
	height: 1rem;
	width: 1rem;
}

select:focus{
	border: 2px solid var( --c-focus );
	box-shadow: 0 0 0 1px var( --c-gravity-blue );
	color: var( --c-gravity-blue );
}

/* Merge Tags */

.all-merge-tags,
.all-merge-tags.textarea {
	background-position: center;
	background-repeat: no-repeat;
	background-image: url(data:image/svg+xml;base64,);
	border: 1px solid var(--c-gravity-blue);
	border-radius: 3px;
	box-sizing: border-box;
	color: #257CB6;
	display: inline-block;
	height: 2.25rem;
	margin: 0 0 0 0.5rem;
	position: relative;
	vertical-align: top;
	width: 2.5rem;

	&:hover {
		drop-shadow: 0rem .125rem .4375rem rgba(28, 31, 63, 0.053);
	}
}

html[dir="rtl"] {
	.all-merge-tags, .all-merge-tags.textarea {
		margin: 0 10px 0 0;
	}
}

.merge-tag-support{
	max-width: 85%;
}

.all-merge-tags a.open-list {
	background: none;
	background-image: none;
	border: 0px;
	cursor: pointer;
	height: 2.125rem;
	transition: none;
	width: 100%;
}

.search-button .search-button__input {
	background: #FFFFFF;
	border: 1px solid var(--c-blue-haze);
	box-sizing: border-box;
	border-radius: 3px;
	color: var(--c-text);
	font-size: var(--t-font-size-base);
	width: 100%;
	padding: 0.625rem 1.0625rem;
	padding-right: 2.1875rem;
	margin: 1px;
}

input.search-button__input::placeholder {
	color: var(--c-amethyst-smoke);
}

.search-button .search-button__input:focus {
	box-shadow: 0px 2px 1px rgba(28, 31, 63, 0.0634624),
			0px 0px 0px 2px var(--c-focus);
	border: 1px solid var(--c-primary-light);
	color: var(--c-text) !important;
	margin: 1px;
	transition: box-shadow .15s ease;
}

.field-choice-row .field-choice-text[type="text"] {
	border-radius: 3px;
	margin: auto 0.3125rem;
}

html[dir="rtl"] .search-button .search-button__input{
	padding-right: 1.0625rem;
	padding-left: 2.1875rem;
}

@media only screen and (max-width: 960px) {
	.panel-block-tabs__body--settings {
		textarea, input[type="text"] {

			&.merge-tag-support {
				max-width: 79%;
			}
		}
	}
}
